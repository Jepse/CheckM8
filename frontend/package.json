{
  "name": "checkmate-electron",
  "version": "0.1.0",
  "description": "A simple checklist application built with Electron.",
  "author": "Checkmate Developer",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "electron": "^28.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "sortablejs": "^1.15.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Checkmate",
        "icon": "assets/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Checkmate",
            "setupIcon": "assets/logo.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
          }
        }
      ]
    }
  }
}
